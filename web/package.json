{
  "name": "@campfyre/web",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "build:docker": "tsc && vite build --mode production",
    "lint": "eslint . --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint . --fix",
    "preview": "vite preview",
    "preview:docker": "vite preview --host 0.0.0.0 --port 4173",
    "typecheck": "tsc --noEmit",
    "docker:build": "docker build -t campfyre-web .",
    "docker:build:prod": "docker build --target production -t campfyre-web:prod .",
    "docker:build:dev": "docker build --target development -t campfyre-web:dev .",
    "docker:run": "docker run -p 8080:8080 campfyre-web:prod",
    "docker:run:dev": "docker run -p 3000:3000 -v $(pwd):/app campfyre-web:dev",
    "docker:compose:up": "docker-compose up -d web-prod",
    "docker:compose:down": "docker-compose down",
    "docker:compose:dev": "docker-compose up web-dev",
    "clean": "rm -rf dist node_modules/.vite",
    "clean:all": "rm -rf dist node_modules/.vite node_modules"
  },
  "dependencies": {
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.1",
    "@hookform/resolvers": "^5.2.2",
    "@mui/icons-material": "^7.3.2",
    "@mui/material": "^7.3.2",
    "@tanstack/react-query": "^5.89.0",
    "@tanstack/react-query-devtools": "^5.89.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hook-form": "^7.63.0",
    "react-router-dom": "^7.9.1",
    "zod": "^4.1.11",
    "zustand": "^5.0.8"
  },
  "devDependencies": {
    "@eslint/js": "^9.36.0",
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@types/react-router-dom": "^5.3.3",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "@vitejs/plugin-react": "^4.2.1",
    "eslint": "^8.55.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "globals": "^16.4.0",
    "typescript": "^5.2.2",
    "vite": "^5.0.8"
  }
}

# Environment Variables Configuration
# Copy this file to .env and update values as needed

# =============================================================================
# Build Configuration
# =============================================================================

# Base path for the application (useful for deployment in subdirectories)
# Examples: "/", "/campfyre", "/app"
VITE_BASE_PATH=/

# =============================================================================
# Development Server Configuration
# =============================================================================

# Development server port
VITE_DEV_PORT=3000

# Preview server port (for testing production builds locally)
VITE_PREVIEW_PORT=4173

# =============================================================================
# API Configuration
# =============================================================================

# API base URL
# Development: http://localhost:8000
# Production: https://api.campfyre.com
VITE_API_URL=http://localhost:8000

# API timeout in milliseconds
VITE_API_TIMEOUT=30000

# Enable API mocking in development
VITE_ENABLE_MOCK_API=false

# =============================================================================
# Application Configuration
# =============================================================================

# Application name
VITE_APP_NAME=Campfyre

# Application version (automatically set from package.json)
# VITE_APP_VERSION=0.1.0

# Environment (development, staging, production)
NODE_ENV=development

# =============================================================================
# Feature Flags
# =============================================================================

# Enable/disable features
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_DEBUG_TOOLS=true
VITE_ENABLE_SERVICE_WORKER=false

# =============================================================================
# Authentication Configuration
# =============================================================================

# OAuth providers (if using external auth)
VITE_GOOGLE_CLIENT_ID=
VITE_GITHUB_CLIENT_ID=

# JWT configuration
VITE_JWT_SECRET_KEY=

# =============================================================================
# External Services
# =============================================================================

# WebSocket URL for real-time features
VITE_WS_URL=ws://localhost:8000/ws

# CDN URL for static assets
VITE_CDN_URL=

# Sentry DSN for error tracking
VITE_SENTRY_DSN=

# =============================================================================
# Performance Configuration
# =============================================================================

# Enable performance monitoring
VITE_ENABLE_PERFORMANCE_MONITORING=false

# Bundle analyzer
VITE_ANALYZE_BUNDLE=false

# =============================================================================
# Docker Configuration
# =============================================================================

# Docker-specific settings
VITE_DOCKER_BUILD=true

# Container environment
VITE_CONTAINER_ENV=docker

# =============================================================================
# Development Tools
# =============================================================================

# Enable React DevTools
VITE_ENABLE_REACT_DEVTOOLS=true

# Enable TanStack Query DevTools
VITE_ENABLE_QUERY_DEVTOOLS=true

# Enable Zustand DevTools
VITE_ENABLE_ZUSTAND_DEVTOOLS=true

# Log level (error, warn, info, debug)
VITE_LOG_LEVEL=info

# =============================================================================
# Security Configuration
# =============================================================================

# Content Security Policy
VITE_CSP_REPORT_URI=

# Enable HTTPS redirect
VITE_FORCE_HTTPS=false

# =============================================================================
# Build Optimization
# =============================================================================

# Enable source maps in production (not recommended)
VITE_SOURCE_MAPS_IN_PROD=false

# Enable gzip compression
VITE_ENABLE_GZIP=true

# =============================================================================
# Testing Configuration
# =============================================================================

# Test environment variables
VITE_TEST_MODE=false
VITE_TEST_API_URL=http://localhost:8000/test

# =============================================================================
# Internationalization
# =============================================================================

# Default language
VITE_DEFAULT_LANGUAGE=en

# Supported languages (comma-separated)
VITE_SUPPORTED_LANGUAGES=en,es,fr,de

# =============================================================================
# Game Configuration
# =============================================================================

# Default game settings
VITE_DEFAULT_MAX_PLAYERS=8
VITE_DEFAULT_GAME_TIMEOUT=300

# Enable game features
VITE_ENABLE_GAME_CHAT=true
VITE_ENABLE_GAME_SPECTATORS=true

{
  "name": "Campfyre Development",
  "image": "node:20-bullseye",

  "features": {
    "ghcr.io/devcontainers/features/git:1": {},
    "ghcr.io/devcontainers/features/docker-in-docker:2": {},
    "ghcr.io/devcontainers/features/node:1": {
      "version": "20"
    }
  },

  "dockerComposeFile": "../docker-compose.yml",
  "service": "devcontainer",
  "workspaceFolder": "/workspaces/campfyre",

  "customizations": {
    "vscode": {
      "extensions": [
        "dbaeumer.vscode-eslint",
        "esbenp.prettier-vscode",
        "Prisma.prisma",
        "ms-azuretools.vscode-docker",
        "eamodio.gitlens",
        "ms-vscode.vscode-typescript-next",
        "bradlc.vscode-tailwindcss",
        "ms-vscode.vscode-json",
        "ms-vscode.vscode-jest",
        "ms-vscode.vscode-yaml",
        "redhat.vscode-yaml",
        "ms-vscode.vscode-github-actions"
      ],
      "settings": {
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "editor.codeActionsOnSave": {
          "source.fixAll.eslint": "explicit"
        },
        "typescript.preferences.importModuleSpecifier": "relative",
        "editor.tabSize": 2,
        "editor.insertSpaces": true,
        "files.eol": "\n",
        "files.trimTrailingWhitespace": true,
        "files.insertFinalNewline": true
      }
    }
  },

  "postCreateCommand": "npm install -g pnpm && pnpm install",

  "containerEnv": {
    "NODE_ENV": "development",
    "PORT": "3000",
    "API_URL": "http://api:3000",
    "DATABASE_URL": "postgresql://campfyre:campfyre@db:5432/campfyre",
    "REDIS_URL": "redis://redis:6379",
    "TURN_USERNAME": "campfyre",
    "TURN_PASSWORD": "campfyre123",
    "MINIO_ROOT_USER": "campfyre",
    "MINIO_ROOT_PASSWORD": "campfyre123"
  },

  "forwardPorts": [3000, 3001, 5432, 6380, 3478],

  "mounts": [
    "source=${localWorkspaceFolder},target=/workspaces/campfyre,type=bind,consistency=cached"
  ],

  "remoteUser": "node"
}

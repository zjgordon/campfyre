# Server Configuration
PORT=3000
HOST=0.0.0.0
NODE_ENV=development

# CORS Configuration
# Comma-separated list of allowed origins
# Set to 'true' to allow all origins (development only)
CORS_ORIGIN=http://localhost:3000,http://localhost:5173

# Rate Limiting Configuration
# Maximum number of requests per time window
RATE_LIMIT_MAX=100
# Time window in milliseconds (60000 = 1 minute)
RATE_LIMIT_WINDOW=60000

# Logging Configuration
# Log level: error, warn, info, debug, trace
LOG_LEVEL=info

# Database Configuration (for future use)
# DATABASE_URL=postgresql://user:password@localhost:5432/campfyre
# DATABASE_HOST=localhost
# DATABASE_PORT=5432
# DATABASE_NAME=campfyre
# DATABASE_USER=campfyre
# DATABASE_PASSWORD=password

# Redis Configuration (for future use)
# REDIS_URL=redis://localhost:6379
# REDIS_HOST=localhost
# REDIS_PORT=6379
# REDIS_PASSWORD=

# Security Configuration
# JWT_SECRET=your-super-secret-jwt-key-here
# JWT_EXPIRES_IN=7d

# API Configuration
# API_VERSION=v1
# API_PREFIX=/api

# Monitoring Configuration
# ENABLE_METRICS=true
# METRICS_PORT=9090

# Production-specific settings
# TRUST_PROXY=true
# COMPRESSION=true
# KEEP_ALIVE_TIMEOUT=65000
# HEADERS_TIMEOUT=66000
# BODY_LIMIT=1048576
# MAX_PARAM_LENGTH=1000

# Health Check Configuration
# HEALTH_CHECK_TIMEOUT=5000
# HEALTH_CHECK_INTERVAL=30000

# Rate Limiting for specific endpoints
# AUTH_RATE_LIMIT_MAX=5
# AUTH_RATE_LIMIT_WINDOW=900000
# API_RATE_LIMIT_MAX=100
# API_RATE_LIMIT_WINDOW=60000
# HEALTH_RATE_LIMIT_MAX=10
# HEALTH_RATE_LIMIT_WINDOW=60000

# Database Configuration (Prisma + PostgreSQL)
# Main database URL with connection pooling
DATABASE_URL="postgresql://postgres:password@localhost:5432/campfyre?schema=public&connection_limit=20&pool_timeout=20"
# Direct database URL for migrations (without connection pooling)
DIRECT_URL="postgresql://postgres:password@localhost:5432/campfyre?schema=public"

# Database Connection Settings
DB_HOST=localhost
DB_PORT=5432
DB_NAME=campfyre
DB_USER=postgres
DB_PASSWORD=password

# Prisma Configuration
PRISMA_QUERY_ENGINE_LIBRARY=query-engine
PRISMA_QUERY_ENGINE_BINARY=query-engine

# Database Pool Settings
DB_POOL_MIN=2
DB_POOL_MAX=20
DB_POOL_IDLE_TIMEOUT=10000
DB_POOL_ACQUIRE_TIMEOUT=30000
DB_POOL_CREATE_TIMEOUT=30000
DB_POOL_DESTROY_TIMEOUT=5000
DB_POOL_REAP_INTERVAL=1000
DB_POOL_CREATE_RETRY_INTERVAL=200
